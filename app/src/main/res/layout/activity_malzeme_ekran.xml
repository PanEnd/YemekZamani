<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.yemekzamani.MalzemeEkranActivity">

    <TextView
        android:id="@+id/girisText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/malzeme_sec"
        android:textColor="#b07cd6"
        android:textSize="20dp"
        android:layout_marginStart="15dp" />

    <ListView
        android:id="@+id/malzemeListesi"
        android:layout_weight="0.89"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnMalzeme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/btn_sec_text"
        android:background="#b07cd6"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

</LinearLayout>