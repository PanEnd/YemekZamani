<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yemekzamani.YemekEkranActivity">

    <TextView
        android:id="@+id/girisText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yemek_sec"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#b07cd6"
        android:layout_marginStart="15dp" />

    <ListView
        android:id="@+id/yemekListesi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/girisText"/>

    <FrameLayout
        android:id="@+id/yemekTarifEkrani"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>