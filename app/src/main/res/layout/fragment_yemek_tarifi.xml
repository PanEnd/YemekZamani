<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YemekTarifiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="N:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="0.06"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.94"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/yemekBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YEMEK"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/malzemelerBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yemekBaslik"
                android:text="Malzemeler:"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/malzemeler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/malzemelerBaslik"
                android:text="mazlemeler"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tarifBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/malzemeler"
                android:text="Tarif:"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tarif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tarifBaslik"
                android:text="tarif"
                android:textSize="20dp" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>